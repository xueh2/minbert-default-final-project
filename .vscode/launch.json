            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "classifier.py",
            "type": "python",
            "request": "launch",
            "program": "classifier.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--option",
                "pretrain",
                "--dp", 
                "--use_gpu"
            ]
        },
        {
            "name": "multitask_classifier.py",
            "type": "python",
            "request": "launch",
            "program": "multitask_classifier.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--option", "finetune",
                "--dp", 
                "--use_gpu", 
                "--lr", "1e-5", 
                "--batch_size", "16", 
                "--epochs", "20",
                "--optimizer", "AdamW",
                "--scheduler", "ReduceLROnPlateau", 
                "--sts_train_method", "classification",
                "--wandb", 
                "--experiment", "only_sts", 
                "--num_steps", "min"
            ]
        }
        ,
        {
            "name": "multitask_classifier_reptile.py",
            "type": "python",
            "request": "launch",
            "program": "multitask_classifier_reptile.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--option", "finetune",
                "--dp", 
                "--use_gpu", 
                "--lr", "1e-5", 
                "--optimizer", "AdamW",
                "--scheduler", "StepLR", 
                "--sts_train_method", "classification",
                "--wandb", 
                "--experiment", "reptile", 
                "--meta_iter", "30",
                "--meta_optimizer", "SGD",
                "--meta_scheduler", "CosineAnnealingLR",
                "--meta_weight_decay", "0.0",
                "--meta_validate_every", "1",
                "--para_iter", "10",
                "--sst_iter", "10",
                "--sts_iter", "10"
            ]
        }
    ]
